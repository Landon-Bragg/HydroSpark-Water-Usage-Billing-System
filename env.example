# HydroSpark Environment Configuration
# Copy this file to .env and update with your values

# Database Configuration
MYSQL_ROOT_PASSWORD=hydrospark_root_2024_CHANGE_ME
MYSQL_DATABASE=hydrospark_db
MYSQL_USER=hydrospark_user
MYSQL_PASSWORD=hydrospark_pass_2024_CHANGE_ME

# Backend Configuration
JWT_SECRET=your-very-long-secret-key-min-256-bits-CHANGE-THIS-IN-PRODUCTION
SERVER_PORT=8080

# Email Configuration (for bill delivery)
MAIL_HOST=smtp.gmail.com
MAIL_PORT=587
MAIL_USERNAME=your-email@gmail.com
MAIL_PASSWORD=your-app-password
MAIL_FROM=noreply@hydrospark.com

# Frontend Configuration
REACT_APP_API_URL=http://localhost:8080

# Application Configuration
APP_ENV=development
LOG_LEVEL=INFO

# Rate Limiting
RATE_LIMIT_REQUESTS=100
RATE_LIMIT_WINDOW=60000

# File Upload
MAX_FILE_SIZE=10MB

# Session Configuration
SESSION_TIMEOUT=3600

# Billing Configuration
DEFAULT_BILL_DUE_DAYS=15
LATE_PAYMENT_FEE=25.00

# Anomaly Detection
ANOMALY_THRESHOLD_MULTIPLIER=2.0
ANOMALY_LOOKBACK_DAYS=30

# Forecasting
FORECAST_METHOD=MOVING_AVERAGE
FORECAST_DAYS_AHEAD=30
FORECAST_MIN_HISTORY_DAYS=60

REACT_APP_API_BASE_URL=http://localhost:8080
